/* variables */
$themeCOLOR: #76A613;
$themeLinkCOLOR: #2886B4;
$themeCOLORLight: lighten( $themeCOLOR, 36% );


/* main styles */
.ppBookmarkletOverlay {
  background: rgba(255,255,255,0.9);
  color: #000000;
  display: block;
  height: 100%;
  left: 0;
  position: fixed;
  top: 0;
  width: 100%;
  overflow-y:scroll;
  z-index:2147483636;
  font-family:helvetica,sans-serif;
  a {
    text-decoration: none;
  }
  #ppHeader {
    position: fixed;
    width: 100%;
    margin: 0;
    background: #FCFCFC;
    border-bottom: 2px solid $themeCOLOR;
    text-align: center;
    font-size: 20px;
    line-height:30px;
    #ppLogo {
      color: $themeCOLOR;
      display: block;
      float:left;
      font-family: times;
      font-size: 24px;
      font-weight: bold;
      left: 0;
      line-height: 30px;
      margin: 0;
      padding: 18px 12px 12px 66px;
      position: relative;
      text-align: left;
      text-decoration: none;
      width: 114px;
      span {
        font-weight:200; }
      &:before {
        background:transparent url(<%= asset_path 'ui/ppBookmarkLogo.png' %>) 0 0 no-repeat;
        content: "";
        height: 44px;
        left: 18px;
        position: absolute;
        top: 7px;
        width: 45px; }
      &:hover {
        color:#000;
        &:before {
          color:#000; } }
      span {
        font-weight:100; } }
    a#ppClose {
      color: $themeLinkCOLOR;
      float: right;
      font-size: 15px;
      line-height: 18px;
      padding: 12px 24px;
      margin:12px 0 0;
      &:hover {
        background:none;
        color:#000;
        text-decoration:none;
      }
    }
  }
  #ppBookmarkletContentWrapper {
    margin-top: 61px;
    padding: 0px;
    position: fixed;
    height: 90%;
    width: 100%;
    text-align: center;
    overflow: auto;
    #ppBookmarkletContent {
      margin: 0px;
      text-align: center;
      -webkit-transition: all 0.4s ease-in-out;
      -moz-transition: all 0.4s ease-in-out;
      -o-transition: all 0.4s ease-in-out;
      transition: all 0.4s ease-in-out;
      #ppParentPinsImporterWrapper {
        margin: 50px;
        iframe.ppParentPinsImporter {
          width: 100%;
          border: 1px solid #333;
          background: #FFF;
        }
      }
      #noPotentialImages {
        margin: 50px auto;
        font-size: 20px;
        text-align: center;
      }
      a.potentialImage {
        display: inline-block;
        -webkit-box-shadow: 0 0 9px rgba(0, 0, 0, 0.3);
        -moz-box-shadow: 0 0 9px rgba(0, 0, 0, 0.3);
        box-shadow: 0 0 9px rgba(0, 0, 0, 0.3);
        border: 1px solid #666;
        margin: 30px;
        overflow: hidden;
        position: relative;
        width: 192px;
        img {
          width: 192px;
          vertical-align: top;
        }
        .details {
          position: absolute;
          bottom: 0px;
          left: 0px;
          width: 100%;
          margin: 0px;
          padding: 5px;
          background: rgba(255, 255, 255, 0.6);
          color: #000;
          text-align: center;
        }
        .btn_select_cover {
          display:none;
        }
        &:hover {
          .btn_select_cover {
            display:block;
            position:absolute; 
            top:0;
            left:0;
            height:100%;
            width:192px;
            background:rgba(0, 0, 0, 0.5);
            span {
              display:block;
              -moz-border-radius: 6px;
              -webkit-border-radius: 6px;
              border-radius: 6px;
              text-align:center;
              color: #fff;
              font-family:times;
              width:110px;
              padding: 9px 12px 6px 12px;
              margin:68px auto 0 auto;
              font-size:18px;
              font-weight:700;
              text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.4);
              border: 1px solid $themeCOLOR;
              background-color: $themeCOLOR;
              filter: progid:DXImageTransform.Microsoft.gradient(startColorstr = 'transparent', endColorstr = 'rgba(0, 0, 0, 0.15)');
              -ms-filter: "progid:DXImageTransform.Microsoft.gradient(startColorstr = 'transparent', endColorstr = 'rgba(0,0,0,0.15)')";
              background-image: -moz-linear-gradient(top, transparent, rgba(0, 0, 0, 0.15));
              background-image: -ms-linear-gradient(top, transparent, rgba(0, 0, 0, 0.15));
              background-image: -o-linear-gradient(top, transparent, rgba(0, 0, 0, 0.15));
              background-image: -webkit-gradient(linear, center top, center bottom, from(transparent), to(rgba(0, 0, 0, 0.15)));
              background-image: -webkit-linear-gradient(top, transparent, rgba(0, 0, 0, 0.15));
              background-image: linear-gradient(top, transparent, rgba(0, 0, 0, 0.15));
              -moz-background-clip: padding;
              -webkit-background-clip: padding-box;
              background-clip: padding-box;
              -webkit-box-shadow: 0 2px 3px rgba(0, 0, 0, 0.7);
              -moz-box-shadow: 0 2px 3px rgba(0, 0, 0, 0.7);
              box-shadow: 0 2px 3px rgba(0, 0, 0, 0.7);
              &:hover {
                background-image:none;
                -webkit-box-shadow: none;
                -moz-box-shadow: none;
                box-shadow: none;
              }
              &:active {
                -webkit-box-shadow: 0 0 5px rgba(0, 0, 0, 0.4) inset;
                -moz-box-shadow: 0 0 5px rgba(0, 0, 0, 0.4) inset;
                box-shadow: 0 0 5px rgba(0, 0, 0, 0.4) inset;
                border:1px solid #000000;
              }
            }
          }
        }
      }
    } 
  }
}
