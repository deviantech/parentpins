@font-face {
  font-family: 'pinli';
	src:url(font-path('pinli.eot'));
	src:url(font-path('pinli.eot') + '?#iefix') format('embedded-opentype'),
  url(font-path('pinli.svg') + '#pinli') format('svg'),
  url(font-path('pinli.woff')) format('woff'),
  url(font-path('pinli.ttf')) format('truetype');
	font-weight: normal;
	font-style: normal; }

/* variables */

$themeCOLOR: #76A613;
$themeCOLORLight: lighten( $themeCOLOR, 36% );
$themeLinkCOLOR: #669701;


/* Mixins */

@mixin pinli-font {
  font-family:'pinli';
	speak: none;
	font-style: normal;
	font-weight: normal;
	line-height: 1;
	-webkit-font-smoothing: antialiased; 
}
@mixin transition($what: all, $length: 0.4s, $how: ease-in-out) {
  -webkit-transition: $what $length $how;
  -moz-transition: $what $length $how;
  -o-transition: $what $length $how;
  transition: $what $length $how; 
}


