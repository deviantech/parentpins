<div class="wrapper">

  <div class="content board board_wide">
    <h1><% if @kind %>Recently Pinned <%= @kind %><% else %>Trending Parenting Articles, Ideas, Gifts, &amp; More<% end %></h1>
    <select class="cat_select">
      <option>All Pins</option>
      <option>Articles</option>
      <option>Gifts</option>
      <option>Ideas</option>
    </select>
    <ul class="timeline" id="pins">
      <!-- Image max-widths should be 320px maintianing aspect ratio with flexible height -->
      <!-- timeline center dot alignments need work to match masonry configuration -->
      <%= render @pins %>
    </ul>
    <a href="#" class="btn action load_more_button tertiary_action">Load More</a>
    <br/>
    <img src="/assets/ui/loader.gif" alt="loading icon" class="loader_icon"/>
  </div>

  <div class="clearfix"></div>

</div>
