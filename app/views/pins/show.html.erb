<div class="pinly_overlay" id="pinly_overlay_<%= @pin.id %>">
  <div class="pinly <%= @pin.kind %>">
    <div class="pin_type"><%= @pin.kind.to_s.titleize %></div>
    <div class="attribute">
      <%= link_to image_tag(@pin.user.avatar.v50.url, :alt => "#{@pin.user.name}'s avatar"), profile_path(@pin.user), :class => 'avatar_link' %>
      <div class="attribute_info">
        <p>
          <%= link_to @pin.user.name, profile_path(@pin.user) %>
          <% if @pin.via %>
            via <%= link_to @pin.via.name, profile_path(@pin.via) %>
          <% end %>
        </p>
        <p class="time"><%= time_ago_in_words @pin.created_at %> ago from <%= link_to @pin.board.name, @pin.board %></p>
      </div>
    </div>
    <div class="detail">
    <h2><%= link_to @pin.name, @pin.url %></h2>
    <p><%= link_to @pin.url, @pin.url %></p>
    <%= render 'stats', :pin => @pin %>
    <%= render 'actions', :pin => @pin %>
    <%= link_to @pin.url, :class => 'image_link' do %>
      <% if @pin.price %>
        <div class="price"><%= number_to_currency @pin.price %></div>
      <% end %>
      <%= image_tag @pin.image.url %>
    <% end %>
    <p class="description"><%= @pin.description %></p>
    
    <% if @pin.original_poster != @pin.via %>
      <p>
        Originally posted by <%= link_to @pin.original_poster.name, profile_path(@pin.original_poster) %>
        <a href="#" class="btn action follow">follow</a>
      </p>
    <% end %>
    
    <div class="comments" id="pinly_comment">
      <div class="comment">
        <a href="#" class="avatar_link"><img src="/assets/images/fallback/user_avatar/v50_default.jpg"></a>
        <div class="user_info">
          <a href="#">User Name</a>
          <p>User comment here for length</p>
        </div>
      </div>
      <div class="comment">
        <a href="#" class="avatar_link"><img src="/assets/images/fallback/user_avatar/v50_default.jpg"></a>
        <div class="user_info">
          <a href="#">User Name</a>
          <p>User comment here for length</p>
        </div>
      </div>
      
      <% if user_signed_in?%>
        <div class="comment_form">
          <form>
            <%= link_to image_tag(current_user.avatar.v50.url, :alt => "#{current_user.name}'s avatar"), profile_path(current_user), :class => 'avatar_link' %>
            <textarea placeholder="Enter your comment..."></textarea>
            <button type="button" class="btn sec_action comment_button">Comment</button>
          </form>
        </div>
      <% end %>
    </div>
  </div>
    <div class="clearfix"></div>
  </div>
</div>
