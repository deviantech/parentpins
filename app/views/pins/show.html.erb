<div class="<%= modal_class %>">
  <div class="pin-context pinly <%= dom_id(@pin) %>">
    <div class="pin_type"><%= @pin.kind.to_s.titleize %></div>

    <div class="attribute">
      <%= avatar_link(@pin.user) %>
      <%= share_pin_on_fb_link(@pin) %>
      <div class="attribute_info">
        <p>
          <%= link_to @pin.user.name, profile_path(@pin.user) %>
          <%= render 'profile/follow_buttons', :to_follow => @pin.user %>
          <% if @pin.via %>
            via <%= link_to @pin.via.name, profile_path(@pin.via) %>
            <%= render 'profile/follow_buttons', :to_follow => @pin.via %>
          <% end %>
        </p>
        <p class="time"><%= time_ago_in_words @pin.created_at %> ago from <%= link_to @pin.board.name, profile_board_path(@pin.board.user, @pin.board) %></p>
      </div>
    </div>

    <div class="detail">
      <h2 class="title">
        <%= link_to@pin.url, @pin.url, :title => 'link out to site' %>
      </h2>
      <% if current_user == @pin.user %>
        <span class="action right"><%= link_to 'edit', edit_pin_path(@pin), :class => 'ajax edit' %></span>
      <% end %>
      <%= render 'pins/stats', :pin => @pin %>
      <%= render 'pins/actions', :pin => @pin %>
      <%= link_to @pin.url, :class => 'image_link' do %>
      <% if @pin.price %>
      <div class="price"><%= number_to_currency @pin.price %></div>
      <% end %>
      <%= image_tag @pin.image.url %>
      <% end %>
      <p class="description"><%= @pin.description %></p>

      <% if @pin.original_poster && @pin.original_poster != @pin.via %>
      <p>
        Originally posted by <%= link_to @pin.original_poster.name, profile_path(@pin.original_poster) %>
        <%= render 'profile/follow_buttons', :to_follow => @pin.original_poster %>
      </p>
      <% end %>

      <div class="comments" id="pinly_comment">
        <%= render :partial => 'pins/comment', :collection => @pin.comments %>
        <% if user_signed_in?%>
          <div class="comment_form">
            <%= form_for Comment.new(params[:comment]) do |f| %>
              <%= f.hidden_field :commentable_type, :value => @pin.try(:class).try(:name) %>
              <%= f.hidden_field :commentable_id, :value => @pin.try(:id) %>
              <%= avatar_link(current_user) %>
              <%= f.text_area :body, :placeholder => 'Enter your comment...', :maxlength => 10000 %>
              <%= f.submit 'Comment', :class => "btn sec_action comment_button" %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="clearfix"></div>
  </div>
</div>