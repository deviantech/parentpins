<div class="comment <%= dom_id(comment) %>">
  <%= avatar_link(comment.user) %>
  <div class="user_info">
    <%= link_to comment.user.name, profile_path(comment.user) %>
    <% if current_user == comment.user %>
      <span class="comment-controls">[ <%= link_to 'Delete', comment_path(comment), :method => :delete, :confirm => 'Are you sure you want to delete this comment?', :remote => true, :class => 'delete' %> ]</span>
    <% end %>
    <p><%= comment.body %></p>
  </div>
</div>
