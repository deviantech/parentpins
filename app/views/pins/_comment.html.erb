<div class="comment <%= dom_id(comment) %><%= ' hidden' if defined?(idx) && idx >= 3 %>">
  <%= avatar_link(comment.user, defined?(small_avatar) ? :v30 : :v50) %>
  <div class="user_info">
    <%= link_to comment.user.name, profile_path(comment.user), :class => 'who' %>
    <% if current_user == comment.user %>
      <span class="comment-controls">[ <%= link_to 'Delete', comment_path(comment), :method => :delete, :confirm => 'Are you sure you want to delete this comment?', :remote => true, :class => 'delete' %> ]</span>
    <% end %>
    <p class="details">
      <%= js_truncation comment.body %>
    </p>
  </div>
</div>
