<%# Note that this is only called when pin is created via ajax, which is only when repinning %>

<% if @pin.new_record? %>
  Global.updateModalContents("<%= escape_javascript(render(:template => 'pins/new')) %>");
  $('.modal_overlay').scrollTo(0);
<% else %>
  Global.closeModal();
  Global.addFlashMsg('Added new pin to <strong><%= escape_javascript(@pin.board.name) %></strong>');
<% end %>
