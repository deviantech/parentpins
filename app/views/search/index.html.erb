<div class="wrapper">
  <div class="content board board_wide">
    <h1>
      Search Results 
      <% unless params[:q].blank? %>
        for "<%= params[:q] %>"
      <% end %>
      (<%= @results.count %>)
    </h1>
    
    <h3 class="search_navigation">
      <%= search_links ['pins', 'boards', 'users'] %>
    </h3>
    
    <% if @results.blank? %>
      <div class="empty-results">No <%= @kind.pluralize %> to show.</div>
    <% else %>
      <ul class="masonry ajax-pagination timeline<%= ' followed_by_list user_results' if @kind = 'user' %>" id="pins">
        <%= render @results %>
      </ul>
      
      <div class="clearfix"></div>
      <%= pagination_link %>
      <div class="clearfix"></div>
    <% end %>
  </div>
  <div class="clearfix"></div>
</div>

