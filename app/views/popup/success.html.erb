<div class="success-wrapper">
  <h2>Success!</h2>
  <h3>Your pin was pinned to <em><%= link_to @pin.board.name, profile_board_url(@pin.user, @pin.board) %></em></h3>

  <div class="buttons">
    <%= link_to "View Pin", pin_url(@pin) %>
    <%= share_pin_on_fb_link(@pin) %>
    <%= link_to_function 'Close Window', 'window.close()', :class => 'js-ignore' %>
  </div>
</div>