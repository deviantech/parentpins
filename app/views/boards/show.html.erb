<div class="wrapper board">

  <div class="content board board_wide">
    <h1><a href="<%= boards_profile_path(@board.user) %>" class="user"><img src="/assets/temp/avatar_30.jpg"><%= @board.user.name %>'s</a> Board: <%= @board.name %></h1>

    <select class="cat_select">
      <option>All Pins</option>
      <option>Articles</option>
      <option>Gifts</option>
      <option>Ideas</option>
    </select>

    <ul class="timeline" id="pins">
      <!-- Image max-widths should be 320px maintianing aspect ratio with flexible height -->
      <!-- timeline center dot alignments need work to match masonry configuration -->
      <%= render :partial => 'pins/pin', :collection => @pins %>
    </ul>

    <div class="clearfix"></div>
    <a href="http://localhost:3000/boards/1" class="btn action load_more_button tertiary_action js-pagination" id="loadMoreBtn">View More</a>
  </div>

  <div class="clearfix"></div>

</div>
