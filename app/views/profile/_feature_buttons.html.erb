<% if current_user.try(:admin?) %>
  <span class="featuring-action-for-<%= user.id %>">
    <a href="#" data-url="<%= profile_featured_path(user) %>" data-confirm="Are you sure you want this user to be featured? They'll receive an email notification if they haven't been featured previously" class="following-action follow <%= 'hidden' if user.featured? %>">make featured</a>
    <a href="#" data-url="<%= profile_featured_path(user) %>" data-confirm="Are you sure you want to remove this user from the featured list?" data-ajax-method="DELETE" class="following-action unfollow <%= 'hidden' unless user.featured? %>">remove featured</a>
  </span>
<% end %>