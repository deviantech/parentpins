<% if @profile.following_only_users_count.zero? %>
  <h1><span><%= @profile.name %></span> isn't following anyone yet</h1>
  
  <div class="empty_pins">
    <p>Followed users and boards will appear here.</p>
  </div>
  
<% else %>
  <h1><span><%= @profile.name %></span> is following <%= pluralize @profile.following_only_users_count, 'other user', 'other users' %>. Their recent activity:</h1>

  <div class="followers_list">
    <ul class="users">
      <% @profile.following_only_users.each do |user| %>
        <%= render 'follower', :follower => user %>
      <% end %>
    </ul>
  </div>

<% end %>
