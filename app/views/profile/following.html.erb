<% count = @profile.following_even_indirectly_count %>
<h1>
  <span>&nbsp;</span>
  <%= @profile.name %> 
  <%= count.zero? ? "isn't Following Anyone" : "is Following #{pluralize(count, 'User', 'Users')}" %>
</h1>

<% if count.zero? %>  
  <div class="empty_pins">
    <p>Followed users and boards will appear here.</p>
  </div>
<% else %>
  <div class="user_list">
    <ul class="users">
      <%= render @profile.following_even_indirectly %>
    </ul>
  </div>
<% end %>
