%h1 
  Importing #{pluralize @pins.length, 'pin', 'pins'} to
  #{@boards.length == 1 ? 'one board' : "#{@boards.length} boards"}

= form_tag :url => pinterest_import_step_2_path do
  %ul.importing_boards
    - @boards.each do |board|
      %li.importing_board
        .board_info
          %h3= board.name
          = image_tag board.cover.url
        %ul.importing_pins
          - @importing[board.id].each do |pin|
            %li.importing_pin{:class => cycle('even', 'odd')}
              .line
                %strong Pin Link
                = text_field_tag :url, pin.url
              .line
                %strong Pin Description
                = text_field_tag :description, pin.description
  