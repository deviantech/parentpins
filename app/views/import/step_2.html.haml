%h1 
  Importing #{pluralize @pins.length, 'pin', 'pins'} to
  #{@boards.length == 1 ? 'one board' : "#{@boards.length} boards"}

= form_for :boards, :url => pinterest_import_step_2_path, :html => {:class => 'import_form'} do |f|
  %ul.importing_boards
    - @boards.each do |board|
      %li.importing_board
        .board_info
          %h3= board.name
          = image_tag board.cover.url
        %ul.importing_pins
          - @importing[board.id].each do |pin|
            %li.importing_pin{:class => cycle('even', 'odd')}
              .pin_photo
                = image_tag pin.cached_remote_image_url
              .pin_info
                = hidden_field_tag :remote_image_url, pin.cached_remote_image_url
                .line
                  %strong Age Group
                  = select_tag :age_group_id, options_for_select([['Select an Age Group', '']] + select_options(AgeGroup.all))
                .line
                  %strong Pin Type
                  - Pin::VALID_TYPES.each do |kind|
                    %label.radio_opt
                      = radio_button_tag :kind, kind
                      = kind.titleize
                .line.field-price.hidden
                  %strong 
                    Price
                    %span (optional)
                  = text_field_tag :price, number_to_currency(pin.price)
                .line
                  %strong Pin Link
                  = text_field_tag :url, pin.url
                .line
                  %strong Pin Description
                  = text_area_tag :description, pin.description
  
  .form_button_bar 
    = link_to_function 'Go Back and Modify Selection', 'previousStep()'
    or
    = f.submit 'Import Pins'