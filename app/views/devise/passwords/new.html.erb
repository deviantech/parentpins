<div class="wrapper profile">

  <div class="content board board_wide">
    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => 'form narrow' }) do |f| %>
      <h1>Forgot your password?</h1>

    <div class="field"><%= devise_error_messages! %></div>

    <div class="field">
      <%= f.email_field :email, :placeholder => 'Email Address' %>
    </div>

    <div class="submit">
      <%= f.submit "Send password reset email", :class => 'btn tertiary_action' %>
    </div>
    
    <div class="buttons">
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
    
  </div>
</div>
  