<div class="wrapper profile">

  <div class="content board board_wide">
    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :class => 'form narrow' }) do |f| %>
      <h1>Change your Password</h1>

      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field">
        <%= f.password_field :password, :placeholder => 'New password' %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, :placeholder => "Confirm new password" %>
      </div>

      <div class="submit">
        <%= f.submit "Change my password", :class => 'btn tertiary_action' %>
      </div>

      <div class="buttons">
        <%= render "devise/shared/links" %>
      </div>
    <% end %>

  
  </div>
</div>