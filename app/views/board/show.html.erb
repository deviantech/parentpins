<h1>
  <a href="<%= profile_boards_path(@board.user) %>" class="user">
    <%= image_tag @board.user.avatar.v30.url, :alt => "#{@board.user.name}'s avatar" %>
    <%= current_user == @board.user ? 'Your' : "#{@board.user.name}'s" %>
  </a>
  Board: <%= @board.name %>
</h1>


<div class="board_description">
  <div class="board_stats">
    <%= pluralize @board.pins_count, 'pin', 'pins' %>
    /
    <%= pluralize @board.followers_even_indirectly_count, 'follower', 'followers' %>
  </div>
  <%= @board.description.blank? ? 'No description provided.' : @board.description %>
</div>




<% if user_signed_in? %>
  <div class="board-controls">
    <% if current_user == @profile %>
      <%= link_to 'Edit', edit_profile_board_path(current_user, @board), :class => "btn sec_action edit_button ajax" %>
    <% else %>
      <%= render 'board/follow_buttons', :board => @board %>
    <% end %>
  </div>
<% end %>


<%= render 'comments' %>

<%= render 'pins/pins' %>