<%= render 'shared/filters' %>


<% if @boards.blank? %>
  <div class="empty-results">
    <h2>Create your first board.</h2>
    <p>You can create boards for any parenting topic to help other parents learn what interests you.</p>
    <p><%= link_to 'Add your first board', new_profile_board_path(current_user), :class => 'ajax btn large primary' %></p>
  </div>
<% else %>
  <ul class="boards masonry ajax-pagination">
    <%= render :partial => 'board/board', :collection => @boards %>
  </ul>
  <div class="clearfix"></div>
  <%= pagination_link %>
  <div class="clearfix"></div>
<% end %>