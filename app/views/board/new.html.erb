<div class="<%= modal_class %>">
  <div class="wrapper profile">

    <div class="content board board_wide">
      <%= form_for(@board, :url => @board.new_record? ? profile_board_index_path(@board.user, @board) : profile_board_path(@board.user, @board), :html => {:class => 'form narrow edit_board'}) do |f| %>
        <%= hidden_field_tag :via %>
        <h1><%= @board.new_record? ? 'Add' : 'Edit' %> Your Board</h1>

        <%= error_messages_for @board %>

        <%= render 'board/form', :f => f %>
        
        <div class="submit">
          <%= f.submit 'Save Board', :class => 'btn tertiary_action' %>
        </div>
        
        <% unless @board.new_record? %>
          <div class="buttons">
            <%= link_to 'Delete this Board', profile_board_path(@board.user, @board), :confirm => 'Are you sure you want to remove this board (and all contained pins)?', :method => :delete, :class => 'delete' %>
          </div>
        <% end %>
        
      <% end %>
    
    </div>

    <div class="clearfix"></div>

  </div>
</div>