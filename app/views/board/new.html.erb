<div class="<%= modal_class %>">
  <div class="wrapper profile">

    <div class="content board board_wide">
      <%= form_for(@board, :url => @board.new_record? ? profile_board_index_path(@board.user, @board) : profile_board_path(@board.user, @board), :html => {:class => 'form narrow edit_board'}, :remote => @remotely) do |f| %>
        <%= hidden_field_tag :via %>
        <h1><%= @board.new_record? ? 'Add' : 'Edit' %> Your Board
            <span>You can create boards for any parenting or child-related topic.</span>
        </h1>

        <div class="errorWrapper"><%= error_messages_for @board %></div>

        <%= render 'board/form', :f => f %>
        
        <div class="submit">
          <%= f.submit 'Save Board', :class => 'btn tertiary_action centered' %>
        </div>
        
        <% unless @board.new_record? %>
          <div class="buttons">
            <%= link_to 'Delete this Board', profile_board_path(@board.user, @board), :confirm => 'Are you sure you want to remove this board (and all contained pins)?', :method => :delete, :class => 'delete' %>
          </div>
        <% end %>
        
      <% end %>
    
    </div>

    <div class="clearfix"></div>

  </div>
</div>