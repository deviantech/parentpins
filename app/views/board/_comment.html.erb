<li class="<%= 'recent_comment' if defined?(first) %> <%= dom_id(comment) %>" data-comment-id="<%= comment.id %>">
  <%= link_to image_tag(comment.user.avatar.v50, :alt => 'Avatar'), profile_path(comment.user), :class => 'avatar' %>
  <div class="body">
    <div class="user_info">
      <%= link_to truncated(comment.user.name, 30), profile_path(comment.user), :class => 'profile_link' %>
      <span><%= time_ago_in_words comment.created_at %> ago</span>
      <% if defined?(first) %>
        <span class="count"><strong>Most Recent</strong> of <span class="comment-count-for-board-<%= comment.commentable.id %>"><%= comment.commentable.comments_count %></span></span>
      <% end %>
      <% if current_user == comment.user %>
        <span class="comment-controls"><%= link_to 'Delete', comment_path(comment), :method => :delete, :'data-confirm' => 'Are you sure you want to delete this comment?', :remote => true %></span>
      <% end %>
    </div>
    <p class="comment">
      <%= comment.body %>
    </p>
  </div>
</li>