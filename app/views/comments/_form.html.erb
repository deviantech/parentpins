<%= form_for Comment.new, :remote => true do |f| %>
  <%= f.hidden_field :commentable_type, :value => commentable.try(:class).try(:name) %>
  <%= f.hidden_field :commentable_id, :value => commentable.try(:id) %>
  <%= avatar_link(current_user, defined?(small_avatar) ? 'v30' : 'v50') %>
  <%= f.text_area :body, :placeholder => 'Add a comment...', :maxlength => 10000 %>
  <%= f.submit 'Comment', :class => "Button WhiteButton Button11 grid_comment_button", :style => 'display: inline-block' %>
<% end %>
