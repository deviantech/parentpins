<div id="flash" class="<%= 'hidden' if flash.blank? %>">
  <% unless flash.blank? %>    
    <% flash.each do |name, msg| %>
      <% if msg.is_a?(String) %>
        <div class="flashmsg alert alert-<%= name %>">
          <a class="close" data-dismiss="alert">&#215;</a>
          <%= content_tag :div, msg, :class => "flash_wrapper" %>
        </div>
      <% end %>
    <% end %>
  <% end %>
</div>
