<%# can have classes of .alert, .error, or .success %>
<% unless flash.blank? %>
  <div id="flash">
    <% flash.each do |name, msg| %>
      <% if msg.is_a?(String) %>
        <div class="flashmsg alert alert-<%= name %>">
          <a class="close" data-dismiss="alert">&#215;</a>
          <%= content_tag :div, msg, :id => "flash_#{name}" %>
        </div>
      <% end %>
    <% end %>
  </div>
<% end %>