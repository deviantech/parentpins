<div class="header_wrapper" id="header_wrapper">
  <div class="header">
    <a href="/" class="logo ir">Parent<span>Pins</span></a>
    <ul class="nav_main">
      <li>
        <%= nav_link 'Trending', pins_path, :also_accept => '/' %>
      </li>
      <li>
        <%= nav_link 'Boards', boards_path %>
      </li>
      <li>
        <%= nav_link 'Articles', articles_path %>
      </li>
    </ul>
    <%= form_tag '/search', :class => 'search' do %>
      <%= text_field_tag :q, params[:q], :placeholder => 'Search...' %>
      <%= hidden_field_tag 'kind', @kind %>
      <button class="btn search_button primary">Go</button>
    <% end %>
    <ul class="nav_login">
      <% if user_signed_in? %>
        <li class="add_pins">
          <%= link_to '+ Add', '#', :class => "add" %>
          <ul>
            <li><%= link_to '+ Pin', new_pin_path, :class => 'ajax' %></li>
            <li><%= link_to '+ Board', new_profile_board_path(current_user), :class => 'ajax' %></li>
            <li><%= bookmarklet_link %></li>
          </ul>
        </li>
        <li class="profile_link">
          <%= link_to "Hi, #{current_user.username.titleize}", activity_profile_path(current_user) %>
          <ul>
            <li><%= link_to 'Activity', activity_profile_path(current_user) %></li>
            <li><%= link_to 'Pins', pins_profile_path(current_user) %></li>
            <li><%= link_to 'Likes', likes_profile_path(current_user) %></li>
            <li><%= link_to 'Boards', profile_boards_path(current_user) %></li>
            <li><%= link_to 'Edit Profile / Account', edit_profile_path(current_user) %></li>
            <li>
              <%= link_to('Logout', destroy_user_session_path, :method => :delete, :class => 'logout') %>
            </li>
          </ul>
        </li>
      <% else %>
        <li>
          <%= nav_link 'Log In', new_user_session_path, :class => "login" %>
        </li>
        <li>
          <%= nav_link 'Sign Up', new_user_registration_path, :class => "signup" %>
        </li>
      <% end %>
    </ul>
    <div class="clearfix"></div>
  </div>
</div>

