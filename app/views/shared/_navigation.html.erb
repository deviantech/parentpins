<div class="header_wrapper" id="header_wrapper">
  <div class="header">
    <div class="nav_wrapper">

      <ul class="nav_main">
        <li class="drop_down">
          <%= nav_link 'Cats', pins_path, :skip_marker => true, :class => 'top cat_top' %>
          <ul class="inner cats">
            <% Category.all.each do |cat| %>
              <li><%= link_to cat.name, pins_path(:category => cat.id) %></li>
            <% end %>
          </ul>
        </li>
        
        <li class="drop_down">
          <%= nav_link 'Trending', pins_path, :also_accept => '/', :class => 'top' %>
          <ul class="inner">
            <li><%= link_to 'Articles', articles_path %></li>
            <li><%= link_to 'Ideas', ideas_path %></li>
            <li><%= link_to 'Products', products_path %></li>
          </ul>
        </li>
        <li>
          <%= nav_link 'Boards', boards_path %>
        </li>
        <li>
          <%= nav_link 'Featured', featured_path %>
        </li>
      </ul>

      <%= form_tag '/search', :class => 'search' do %>
        <%= text_field_tag :q, params[:q], :placeholder => 'Search...' %>
        <%= hidden_field_tag 'kind', @kind %>
        <button class="btn search_button primary">î€–</button>
      <% end %>
      
      <ul class="nav_login">    
        <li class="drop_down">
          <a href="/faq.html" class="top">About</a>
          <ul class="inner">
            <li><a href="/faq.html">FAQs</a></li>
            <li><a href="/legal.html">Terms of Service</a></li>
            <li><a href="/copyright.html">Copyright</a></li>
            <li><a href="/privacy.html">Privacy</a></li>

            <li><a href="/feedback/new">Contact Us</a></li>
          </ul>
        </li>  
        <% if user_signed_in? %>
        <li class="drop_down">
          <%= link_to '+ Add', '#', :class => "add top" %>
          <ul class="inner">
            <li><%= link_to '+ Pin', new_pin_path, :class => 'ajax' %></li>
            <li><%= link_to '+ Board', new_profile_board_path(current_user), :class => 'ajax' %></li>
            <li><%= link_to '+ Friends', fb_invite_url, :rel => 'nofollow', :target => '_blank', :title => 'Ask FB friends to join you on ParentPins!', :rel => 'tooltip', 'data-placement' => 'bottom' %></li>
          </ul>
        </li>
        <li class="drop_down">
          <%= link_to truncate(current_user.username.titleize, :length => 13), activity_profile_path(current_user), :class => 'top username' %>
          <ul class="inner">
            <li><%= link_to 'Activity', activity_profile_path(current_user) %></li>
            <li><%= link_to 'Pins', pins_profile_path(current_user) %></li>
            <li><%= link_to 'Likes', likes_profile_path(current_user) %></li>
            <li><%= link_to 'Boards', profile_boards_path(current_user) %></li>
            <li><%= link_to 'Edit Profile / Account', edit_profile_path(current_user) %></li>
            <li>
              <%= link_to('Logout', destroy_user_session_path, :method => :delete, :class => 'logout') %>
            </li>
          </ul>
        </li>
        <% else %>
        <li>
          <%= nav_link 'Log In', new_user_session_path, :class => "login ajax" %>
        </li>
        <li>
          <%= nav_link 'Sign Up', new_user_registration_path, :class => "signup" %>
        </li>
        <% end %>
      </ul>
      
      <a href="/" class="logo ir">Parent<span>Pins</span></a>
      
      <div class="clearfix"></div>
    </div>
  </div>
</div>

